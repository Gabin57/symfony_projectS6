{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-2xl font-bold mb-6">Edit User</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            {{ form_widget(form) }}
            <button class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">{{ button_label|default('Update') }}</button>
        {{ form_end(form) }}

        <div class="mt-6">
            {{ include('admin/user/_delete_form.html.twig') }}
        </div>

        <a href="{{ path('admin_user_index') }}" class="mt-4 block text-indigo-600 hover:text-indigo-900">Back to list</a>
    </div>
{% endblock %}
