<nav aria-label="Progress" class="mb-8">
  <ol role="list" class="space-y-4 md:flex md:space-x-8 md:space-y-0">
    {% for i in 1..4 %}
    <li class="md:flex-1">
      <div class="group flex flex-col border-l-4 {{ step >= i ? 'border-indigo-600' : 'border-gray-200' }} py-2 pl-4 hover:border-indigo-800 md:border-l-0 md:border-t-4 md:pb-0 md:pl-0 md:pt-4">
        <span class="text-sm font-medium {{ step >= i ? 'text-indigo-600' : 'text-gray-500' }}">Step {{ i }}</span>
        <span class="text-sm font-medium">{{ i == 4 ? 'Summary' : 'Details' }}</span>
      </div>
    </li>
    {% endfor %}
  </ol>
</nav>
